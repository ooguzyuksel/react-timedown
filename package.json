{
  "name": "react-timedown",
  "version": "1.0.0",
  "description": "A headless, flexible timedown timer hook and component for React applications",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "lint": "tsc --noEmit --project tsconfig.json",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "docs:dev": "vite --config docs/vite.config.ts",
    "docs:build": "vite build --config docs/vite.config.ts",
    "prepublishOnly": "yarn build",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "jest --bail --findRelatedTests --passWithNoTests"
    ]
  },
  "keywords": [
    "react",
    "timedown",
    "countdown",
    "timer",
    "headless",
    "hook",
    "react-hook",
    "timedown-timer",
    "countdown-timer"
  ],
  "author": "Oguzhan Yuksel <https://github.com/ooguzyuksel>",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.5",
    "@storybook/addon-essentials": "^7.6.7",
    "@storybook/addon-interactions": "^7.6.7",
    "@storybook/addon-links": "^7.6.7",
    "@storybook/blocks": "^7.6.7",
    "@storybook/react": "^7.6.7",
    "@storybook/react-vite": "^7.6.7",
    "@storybook/testing-library": "^0.2.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^14.1.2",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.7",
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^16.2.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^4.9.4",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "storybook": "^7.6.7",
    "ts-jest": "^29.1.1",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.11"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ooguzyuksel/react-timedown.git"
  },
  "bugs": {
    "url": "https://github.com/ooguzyuksel/react-timedown/issues"
  },
  "homepage": "https://github.com/ooguzyuksel/react-timedown#readme"
}
